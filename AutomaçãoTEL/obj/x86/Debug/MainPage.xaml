<Page
    x:Class="AutomaçãoTEL.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AutomaçãoTEL"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" d:DesignHeight="567.5" d:DesignWidth="442"
    >

    <Grid>
        <muxc:NavigationView x:ConnectionId='2' x:Name="NavView"
                             IsBackButtonVisible="Collapsed"
                             HorizontalAlignment="Left"
                             CompactModeThresholdWidth="0"
                             ExpandedModeThresholdWidth="1000" Width="275"
                             PaneTitle="Labelo"
                             >
            <muxc:NavigationView.PaneHeader>
                <Image x:ConnectionId='4' x:Name="Header" Source="/Assets/labelo.png" Stretch="UniformToFill" Margin="0,0,0,0" HorizontalAlignment="Left" Width="216" Height="53"/>
            </muxc:NavigationView.PaneHeader>
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem Tag="home" Icon="Home" Content="Home"/>
                <muxc:NavigationViewItemSeparator/>
                <muxc:NavigationViewItemHeader x:ConnectionId='5' x:Name="MainPagesHeader"
                                           Content="Main pages"/>
                <muxc:NavigationViewItem Tag="WIFI" Content="WIFI">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE701;"/>
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
                <muxc:NavigationViewItem Tag="BT" Content="BlueTooth">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE702;"/>
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
            </muxc:NavigationView.MenuItems>
        </muxc:NavigationView>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Vertical" Margin="40,20,0,0">
            <TextBlock Text="Automação WIFI e Bluetooth"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,0"
                        FontSize="28"
                        />
            <TextBlock Text="By Matheus Productions"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        FontSize="15"
                        Margin="20,-5,0,0" />
        </StackPanel>

        <StackPanel VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    Margin="40,0,0,0" Orientation="Vertical">
            <TextBlock x:ConnectionId='3' x:Name="TbAto237"
                        Text="Ensaios do Ato 237"
                        FontSize="14"
                        Width="200"
                        Margin="5,0,0,0"
                        FontFamily="Consolas"
                        TextAlignment="Left"
                        HorizontalAlignment="Left" />
            <StackPanel VerticalAlignment="Bottom"
                        HorizontalAlignment="Center" 
                        Orientation="Horizontal" Margin="0,0,0,60">
                <Button Content="Item 10"
                    Width="110" 
                    Height="30" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="0,5,5,5" />
                <Button Content="Item 11"
                    Width="110" 
                    Height="30"  
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="5" />
                <Button Content="Item 12"
                    Width="110" 
                    Height="30"  
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="5,5,0,5" />
            </StackPanel>
            <Button Content="Confirmar"
                Width="110"
                Height="30"
                Margin="0,-50,0,20"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                />
        </StackPanel>
        
    </Grid>
</Page>

